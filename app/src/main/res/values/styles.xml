<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0ffff0</item>
        <item name="colorPrimaryDark">#0ffff0</item>
        <item name="colorAccent">#f0f0</item>
    </style>

    <style name="Theme.App.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#0000ff</item>
        <item name="colorPrimaryDark">#000000</item>

        <item name="colorAccent">#ee0000</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
